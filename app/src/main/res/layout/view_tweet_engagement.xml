<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignStart="@+id/ivProfileImage"
    android:layout_below="@+id/tvTweetText"
    android:weightSum="3">

    <ImageView
        android:id="@+id/ivReply"
        app:srcCompat="@drawable/ic_reply_inactive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/ivRetweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_retweet_inactive"
        android:drawablePadding="@dimen/tweet_small_padding"/>

    <TextView
        android:id="@+id/ivLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/tweet_padding"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_like_inactive"
        android:drawablePadding="@dimen/tweet_small_padding"/>
</LinearLayout>