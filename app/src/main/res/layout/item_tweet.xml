<?xml version="1.0" encoding="utf-8"?>
<!--TODO: Redo this as a constraint layout?-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="@dimen/twitter_profile_image_size"
        android:layout_height="@dimen/twitter_profile_image_size"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/tweet_padding"
        android:contentDescription="@string/cd_profile_image"/>

    <LinearLayout
        android:id="@+id/userInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/tweet_padding"
        android:layout_toEndOf="@+id/ivProfileImage">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/tweet_small_padding"
            android:textStyle="bold"
            android:text="@string/default_name"
            style="@style/BoldText"/>

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:maxWidth="@dimen/tweet_username_max_width"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/tweet_small_padding"
            android:text="@string/default_user_name"
            android:textColor="@color/dark_grey"
            style="@style/EllipsizedLightText"/>

        <!--TODO: Add the dot here between these views-->

        <TextView
            android:id="@+id/tvRelativeTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_relative_timestamp"
            style="@style/EllipsizedLightText"/>

        <!--TODO: Add a drop down menu here-->
    </LinearLayout>

    <TextView
        android:id="@+id/tvTweetText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/tweet_padding"
        android:layout_marginEnd="@dimen/tweet_padding"
        android:layout_below="@id/userInformation"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:text="@string/default_tweet_text"
        style="@style/TweetText"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ivProfileImage"
        android:layout_below="@+id/tvTweetText"
        android:weightSum="3">

        <ImageView
            android:id="@+id/ivReply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_reply_inactive"/>

        <ImageView
            android:id="@+id/ivRetweet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_retweet_inactive"/>

        <ImageView
            android:id="@+id/ivFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/tweet_padding"
            app:srcCompat="@drawable/ic_favorite_inactive"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/tweet_divider"
        android:layout_alignParentBottom="true"
        android:background="@color/light_grey"/>
</RelativeLayout>