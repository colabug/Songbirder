<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/tweet_padding">

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="@dimen/twitter_profile_image_size"
        android:layout_height="@dimen/twitter_profile_image_size"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:color/holo_blue_bright"/>

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tweet_padding"
        android:layout_marginStart="@dimen/tweet_padding"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:text="@string/default_user_name"/>

    <TextView
        android:id="@+id/tvTweetText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tweet_padding"
        android:layout_marginStart="@dimen/tweet_padding"
        android:layout_below="@+id/tvUserName"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:layout_alignBottom="@+id/ivProfileImage"
        android:text="@string/default_tweet_text"/>
</RelativeLayout>