<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/general_margin"
        android:layout_marginStart="@dimen/general_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/ic_close"/>

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="@dimen/general_margin"
        android:layout_marginEnd="@dimen/general_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_launcher"/>

    <EditText
        android:id="@+id/etEnterTweet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/general_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.131"
        android:hint="@string/compose_prompt"/>

    <Button
        android:id="@+id/btnTweet"
        android:layout_width="@dimen/compose_tweet_button_width"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/general_margin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEnterTweet"
        app:layout_constraintVertical_bias="0.136"
        android:text="@string/compose_tweet_button"/>

    <TextView
        android:id="@+id/tvCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/etEnterTweet"
        app:layout_constraintRight_toLeftOf="@id/btnTweet"
        app:layout_constraintBottom_toBottomOf="@id/btnTweet"
        android:text="@string/compose_default_counter_value"/>
</android.support.constraint.ConstraintLayout>